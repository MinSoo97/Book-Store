<head>
  <% include ./top/head.ejs %>

</head>
<body>
<div><% include ./top/nav.ejs %></div>
</body>

<h1>마이페이지</h1>
<br>
<h5>카드 정보</h5>
<table id="mycard" class="table-bordered table-hover b">
    <thead>
    <tr>
      <th>카드번호</th>
      <th>카드 유효기간</th>
      <th>카드 종류</th>
      <th >삭제</th>
    </tr> 
    </thead>
    
    <tbody>
    <% for(var i = 0; i < mypagecard.length; i++ ) { %>
      <tr>
        <td align='center'><%= mypagecard[i].Credit_Num %></td>
        <td align='center'><%= mypagecard[i].Credit_Validity %></td>
        <td align='center'><%= mypagecard[i].Credit_Kind %></td>
        <td align='center'><button class="btn btn-outline-success my-2 my-sm-0"  onclick="location.href='/users/mypage/carddelete/<%= mypagecard[i].Credit_Num %>'">삭제</button></td>
      </tr>
    <% } %>
    </tbody>
  </table>
  <br>
  <h5>내쿠폰</h5>
  <table id="mycoupon" class="table-bordered table-hover b">
    <thead>
    <tr>
      <th>쿠폰 번호</th>
      <th>종류</th>
      <th>사용 여부</th>
      <th >발급일</th>
      <th>사용일</th>
      <th >유효기간</th>
    </tr> 
    </thead>
    <tr>
      <% for(var i = 0; i < mypagecoupon.length; i++ ) { %>
        <tr>
          <td align='center'><%= mypagecoupon[i].Coupon_Num %></td>
          <td align='center'>
            <%= mypagecoupon[i].Coupon_Kind %>
            <% if(mypagecoupon[i].Coupon_Kind == '10') { %>
              % 할인
              <% } else {%>
                원 할인
                <% } %>
          </td>
          <td align='center'><%= mypagecoupon[i].Coupon_YN %></td>
          <td align='center'><%= mypagecoupon[i].Coupon_Date %> </td>
          <td align='center'><%= mypagecoupon[i].Coupon_Use %></td>
          <td align='center'><%= mypagecoupon[i].Coupon_Validity %></td>
        </tr>
      <% } %>
    </tr>
    <tbody>
      </table><br>

      <h5>배송지 정보</h5>
      <table id="myaddress" class="table-bordered table-hover b">
        <thead>
        <tr>
          <th>기본주소</th>
          <th>상세주소</th>
          <th>우편번호</th>
          <th >삭제</th>
        </tr> 
        </thead>
        <tr>
          <% for(var i = 0; i < mypageadd.length; i++ ) { %>
            <tr>
              <td align='center'><%= mypageadd[i].Address_Base %></td>
              <td align='center'><%= mypageadd[i].Address_Detail %></td>
              <td align='center'><%= mypageadd[i].Address_Post %></td>
              <td align='center'><button class="btn btn-outline-success my-2 my-sm-0"  onclick="location.href='/users/mypage/adddelete/<%= mypageadd[i].Address_Num %>'">삭제</button></td>
            </tr>
          <% } %>
        </tr>
        <tbody>
   
    </tbody>
  </table>
  <br>
  <h5>주문 정보</h5>
  <table id="mypageorderlist" class="table-bordered table-hover b">
    <thead>
    <tr>
      <th>주문번호</th>
      <th>주문날짜</th>
      <th>도서명</th>
      <th>가격</th>
      <th>할인가</th>
      <th>수량</th>
      <th>카드번호</th>
      <th>유효기간</th>
      <th>카드종류</th>
      <th>기본주소</th>
      <th>상세주소</th>
      <th>우편번호</th>
      <th >삭제</th>
    </tr> 
    </thead>
    <tr>
      <% for(var i = 0; i < mypageorderlist.length; i++ ) { %>
        <tr>
          <td align='center'><%= mypageorderlist[i].Order_Num %></td>     
          <td align='center'><%= mypageorderlist[i].Order_Date %></td>
          <td align='center'><%= mypageorderlist[i].Book_Name %></td>
          <td align='center'><%= mypageorderlist[i].Order_Pay %> 원</td>
          <%if(mypageorderlist[i].OrderInfo_Coupon == '10') {%>
          <td align='center'><%= mypageorderlist[i].Order_Pay * (1-(mypageorderlist[i].OrderInfo_Coupon)/100) %> 원</td>
          <%} else{ %>
            <td align='center'><%= mypageorderlist[i].Order_Pay - mypageorderlist[i].OrderInfo_Coupon %> 원</td>
            <% } %>

          <td align='center'><%= mypageorderlist[i].OrderInfo_Count %> 권</td>
          <td align='center'><%= mypageorderlist[i].Order_Credit_Num %></td>
          <td align='center'><%= mypageorderlist[i].Order_Credit_Validity %></td>
          <td align='center'><%= mypageorderlist[i].Order_Credit_Kind %></td>
          <td align='center'><%= mypageorderlist[i].Order_Address_Base %></td>
          <td align='center'><%= mypageorderlist[i].Order_Address_Detail %></td>
          <td align='center'><%= mypageorderlist[i].Order_Address_Post %></td>
          <td align='center'><button class="btn btn-outline-success my-2 my-sm-0"  onclick="location.href='/users/mypage/orderlistdelete/<%= mypageorderlist[i].Order_Num %>'">주문취소</button></td>
        </tr>
      <% } %>
    </tr>
    <tbody>
   
    </tbody>
  </table>